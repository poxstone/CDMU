//CONTENIDO
#content
#banner #content-inside
    max-width none !important
    width auto
a.CDMU-close
    display block
    float right
    text-align center
    width 32px
    position relative
    z-index 11
    height 32px
    line-height 32px
    font-size 24px
    color #333
    top 5px
    right -10px
    cursor pointer
    transition ease-in-out 250ms all
    box-shadow rgba(#000,0) 0px 0px 4px 0
    &:hover
        box-shadow rgba(#000,.1) 2px 2px 4px 0
    
#CDMU-CONT
    font-family $textFont
    color $textColor
    padding-top 1px
    margin-top -1px
    
    .wrapper
        max-width $wrapper - 19
        margin auto
        height 100%
    .header
        background-color $aquamarine
        background $aquamarine
        margin-top -1px
        padding-top 1px
        height 500px
        position relative
        z-index 1
        &:before
        &:after
            content ''
            display block
            position absolute
            left 0
            z-index 1
            right 0
        &:before
            top 0
            height 54px
            background url(../img/banner/bg-top.png) center top repeat-x
        &:after
            bottom 0
            height 124px
            background url(../img/banner/bg-bottom.png) center bottom repeat-x
        .bg-figure
            animation bg_left linear 30s infinite
            background url(../img/banner/bg-00.png) repeat-x center center transparent
            position absolute
            top 0
            left 0
            height 100%
            width 100%
            
    .credits
        display block
        position fixed
        right 0
        top 227px
        z-index 2
        width 110px
        height 250px
        background #fff
        text-align center
        box-shadow rgba(#000, 0.33) -8px 8px 16px 0
        img
            margin auto
            padding 0
            display block
    .menu-gram
        position absolute
        bottom 0
        z-index 11
        height 480px
        width 480px
        margin-left -121px
        transition ease-in-out all 500ms
        
        .img-gram
            height 100%
            transition ease-in-out all 500ms
            img
                display block
                position absolute
                top 0
                bottom 0
                height auto
                margin auto
                transition ease-in-out 250ms all
                
        .lnk-gram
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            
            a
                position absolute
                background transparent no-repeat center center
                background-size 100% 100%
                display inline-block
                size 60px
                border-radius 1000px
                border 3px solid rgba(#fff,0.33)
                cursor pointer
                box-shadow rgba(#000,.33) 0px 0px 8px 0
                transition ease-in-out 250ms all
                transform scale(0.9)
                    
                &:hover
                    box-shadow rgba($aquamarine,.5) 0 0 16px 0
                    transform scale(1)
                    z-index 1
                    .label
                        display block
                        animation loadingShow ease-in-out 250ms
                    
                .label
                    display none
                    width 200px
                    margin-left 15px
                    position absolute
                    left 100%
                    top 25%
                    background #fff
                    color $textColor
                    text-align center
                    font-size $text_p
                    padding ($paddingBox * .5)
                    box-shadow rgba(#000,.33) 2px 2px 8px 0
                    line-height 1.2em
                    &:before
                        content ''
                        display block
                        position absolute
                        right 100%
                        top 50%
                        margin-top -8px
                        arrow 12px 8px left #fff

                $top= -2px 31px 88px 161px 239px 312px 369px 402px 375px
                $lft= 245px 317px 371px 400px 399px 371px 316px 246px 80px
                
                for $v, $i in $top
                    &.lnk_{$i}
                        background-image url('../img/banner/ico_'+$i+'.png')
                        top $v
                        left $lft[$i]
    
    .contenido
        padding-top 10px
    h1
        color $titleColor
        padding 20px 0 10px 0
        margin auto

    h2
        color $aquamarine_dark
        font-size $text_h2
        margin $paddingBox auto
        padding-top 0
        
    p
        text-align justify
        padding 10px 0
        margin auto
    
    //MINIMIZED
    &.cont-mapa
    &.cont-iframe
    &.cont-introduccion
        //MENU
        .menu-gram
            width 240px
            height 380px
            img
                top auto
                bottom 42px
        .lnk-gram a
            position static
            width 30px
            height 30px
            display block
            float right
            clear both
            border-width 1px
            margin-bottom 3%
            margin-right 40px
            box-shadow none
        .din-txt
            padding-left 140px
            
    &.cont-mapa
        .din-txt .overflower
            float right
            .mapa
                margin-left $paddingBox *2
                width 450px
                //height 525px
    &.cont-iframe
        .din-txt 
            padding-left 121px
            .overflower .mapa
                width 100%
            .mapa
                padding-top 1px
                padding-bottom 1px
                margin-bottom $paddingBox
                
                &:before
                &:after
                    content ''
                    display block
                    background $gray4
                    width 95%
                    height 1px
                    margin auto
                    
            iframe
                background #fff
                width 100%
                height 750px
            
        

#DIN-CON
    position relative
    z-index 10
    height 1px
    margin-top -1px
    .wrapper
        position relative
    .intercambiable
        display none
    .din-txt
        background #fff
        width auto
        height auto
        position absolute
        box-shadow rgba(#000,.25) -2px 4px 12px 0
        padding $paddingBox *2
        right 0
        top 0
        min-height 500px
        transition ease-in-out all 500ms
                
        p
            line-height 1.2em
            padding 0 0 10px 0
            margin auto
            text-align justify
    iframe
        width 100%
        height 350px
        border none
    .overflower
        overflow auto
        overflow-x hidden
        transition ease-in-out all 500ms
    .cont-txt
        overflow auto
        img
            width 100%
            height auto
        
        