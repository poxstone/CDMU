#content
#banner #content-inside
    max-width none !important
    width auto
a.CDMU-close
    display block
    float right
    text-align center
    width 32px
    position relative
    z-index 11
    height 32px
    line-height 32px
    font-size 24px
    color #333
    top -10px
    right -10px
    cursor pointer
    transition ease-in-out 250ms all
    box-shadow rgba(#000,0) 0px 0px 4px 0
    &:hover
        box-shadow rgba(#000,.1) 2px 2px 4px 0
    
#CDMU-CONT
    font-family $textFont
    color $textColor
    padding-top 1px
    margin-top -1px
    
    
    .wrapper
        max-width $wrapper - 19
        margin auto
        height 100%
    .header
        background-color $aquamarine
        background linear-gradient(to bottom, $aquamarine 0%, lighten($aquamarine, 40%) 50%, $aquamarine 100%)
        margin-top -1px
        padding-top 1px
        height 475px
        position relative
        z-index 1
        &:before
        &:after
            content ''
            display block
            position absolute
            left 0
            z-index 1
            right 0
        &:before
            top -1px
            height 65px
            background url(../img/banner/bg-top.png) center top repeat-x
        &:after
            bottom -1px
            height 102px
            background url(../img/banner/bg-bottom.png) center bottom repeat-x
        .bg-figure
            animation bg_left linear 30s infinite
            background url(../img/banner/bg-aquamarine.png) repeat-x center center transparent
            position absolute
            top 0
            left 0
            height 100%
            width 100%
            
    .credits
        display block
        position fixed
        right 0
        top 227px
        z-index 2
        box-shadow rgba(#000, 0.33) -8px 8px 16px 0
        img
            margin auto
            padding 0
            display block
    .menu-gram
        position relative
        z-index 11
        width 40%
        margin-left -120px
        height 100%
        top 0
        .cont-iframe&
            z-index 11
            width 100%
        .img-gram
            height 100%
            img
                display block
                position absolute
                top 0
                bottom 0
                height auto
                margin auto
                transition ease-in-out 250ms all
            .cont-iframe&
                img
                    width 200px
                    padding-top 360px
        .gramfn
            padding-top 120px
            
                
        .lnk-gram
            position absolute
            top 0
            left 300px
            
            .cont-iframe&
                top auto
                bottom 0px
                left 220px
            a
                position absolute
                background transparent no-repeat center center
                background-size 100% 100%
                display inline-block
                size 60px
                border-radius 1000px
                border 3px solid rgba(#fff,0.33)
                cursor pointer
                box-shadow rgba(#000,.33) 0px 0px 8px 0
                transition ease-in-out 250ms all
                transform scale(0.9)
                .cont-iframe&
                    size 30px
                    position static
                    text-outline  auto !important
                    left auto !important
                    
                &:hover
                    box-shadow rgba($aquamarine,.5) 0 0 16px 0
                    transform scale(1)
                    z-index 1
                    .label
                        display block
                        animation loadingShow ease-in-out 250ms
                    
                .label
                    display none
                    width 200px
                    margin-left 15px
                    position absolute
                    left 100%
                    top 25%
                    background #fff
                    color $textColor
                    text-align center
                    font-size $text_p
                    padding ($paddingBox * .5)
                    box-shadow rgba(#000,.33) 2px 2px 8px 0
                    line-height 1.2em
                    &:before
                        content ''
                        display block
                        position absolute
                        right 100%
                        top 50%
                        margin-top -8px
                        arrow 12px 8px left #fff

                $top= 20px 60px 125px 205px 285px 360px 410px 435px 435px
                $lft= -40px 20px 70px 90px 80px 40px -15px -95px -180px
                
                for $v, $i in $top
                    &.lnk_{$i}
                        background-image url('../img/banner/ico_'+$i+'.png')
                        top $v
                        left $lft[$i]
    
    .contenido
        padding-top 20px
        .cont-iframe&
        .cont-mapa&
            height 100px
            color transparent
            opacity 0
    h1
        color $titleColor
    h2
        color $aquamarine_dark
        font-size $text_h3
        margin auto
        padding-top 0
        
    p
        text-align justify

