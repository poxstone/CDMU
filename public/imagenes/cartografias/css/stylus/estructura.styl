            .contenido
               // display none
                
                
            
    &.is-mapa
        .din-txt .overflower
            float right
            .mapa
                margin-left $paddingBox *2
                width 500px
                height 600px
                background $gray
                    img
                        width 100%
        @media(max-width $sc-sm)
            .din-txt .overflower
                float none
                .mapa
                    width 100%
                    height 375px
                    margin-left 0
        
    &.is-iframe
        .din-txt 
            padding-left 100px
            .overflower .mapa
                width 100%
            .mapa
                padding-top 1px
                padding-bottom 1px
                margin-bottom $paddingBox
                
                
                &:before
                &:after
                    content ''
                    display block
                    background $gray4
                    width 95%
                    height 1px
                    margin auto
                    
            iframe
                background #fff
                width 100%
                height 750px

        @media(max-width $sc-sm)
            .din-txt
                padding-left 60px
                .mapa
                    padding 0
                iframe
                    height 400px
                    border 1px solid $gray4
            
        

#DIN-CON
