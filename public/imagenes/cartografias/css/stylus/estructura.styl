#CDMU-CONT
    font-family $textFont
    color $textColor
    padding-top 1px
    margin-top -1px
    padding-bottom 100px
    position relative
    
    .wrapper
        max-width $wrapper - 19
        margin auto
        height 100%
    .header
        background-color $aquamarine
        background $aquamarine
        margin-top -1px
        padding-top 1px
        height 500px
        position relative
        z-index 1
        &:before
        &:after
            content ''
            display block
            position absolute
            left 0
            z-index 1
            right 0
        &:before
            top 0
            height 54px
            background url(../img/banner/bg-top.png) center top repeat-x
            @media(max-width $sc-sm)
                display none
                
        &:after
            bottom 0
            height 124px
            background url(../img/banner/bg-bottom.png) center bottom repeat-x
        .bg-figure
            animation bg_left linear 30s infinite
            background url(../img/banner/bg-00.png) repeat-x center center transparent
            position absolute
            top 0
            left 0
            height 100%
            width 100%
            transition ease-in-out 250ms all
    
            $colors= $ban0, $ban1, $ban2, $ban3, $ban4, $ban5, $ban6, $ban7, $ban8
            $links= "cartografias", "cartografias_tradicionales", "cartografias_festivales", "cartografias_indigenas", "cartografias_redes", "cartografias_bandas", "cartografias_tesauro", 'vocales', 'introcuccion'
            for value, index in $links
                .{value}&
                .hover_{value}&
                    $uri= '../img/banner/bg-0'+(index)+'.png'
                    $color= $colors[index]
                    background-color $color
                    background-image url($uri)
                /#CDMU-CONT.hover_{value}
                    .menu-gram .text-gram .tipographic.{value}
                        display block
                        animation showUp ease-in-out 500ms
                    .tipographic.cartografias
                        visibility hidden
            
    .credits
        display block
        position absolute
        top 100%
        width 100%
        height auto
        text-align center
        img
            margin -50px auto 0
            padding 0
            display block
            max-width 100%
    
    .menu-gram
        position absolute
        bottom 0
        z-index 11
        height 480px
        width 480px
        margin-left -121px
        transition ease-in-out all 500ms
        
        .img-gram
            height 100%
            transition ease-in-out all 500ms
            img
                display block
                position absolute
                top 0
                bottom 0
                height auto
                margin auto
                max-width 100%
                transition ease-in-out 250ms all
                
        .lnk-gram
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            transition ease-in-out all 250ms
            
            a
                position absolute
                background transparent no-repeat center center
                background-size 100% 100%
                display inline-block
                size 60px
                border-radius 1000px
                border 3px solid rgba(#fff,0.33)
                cursor pointer
                box-shadow rgba(#000,.33) 0px 0px 8px 0
                transition ease-in-out 250ms all
                transform scale(0.9)
                    
                &:hover
                    box-shadow rgba($aquamarine,.5) 0 0 16px 0
                    transform scale(1)
                    z-index 1
                    .label
                        display block
                        animation loadingShow ease-in-out 250ms
                    
                .label
                    display none
                    width 200px
                    margin-left 15px
                    position absolute
                    left 100%
                    top 25%
                    background #fff
                    color $textColor
                    text-align center
                    font-size $text_p
                    padding ($paddingBox * .5)
                    box-shadow rgba(#000,.33) 2px 2px 8px 0
                    line-height 1.2em
                    &:before
                        content ''
                        display block
                        position absolute
                        right 100%
                        top 50%
                        margin-top -8px
                        arrow 12px 8px left #fff

                $top= -2px 31px 88px 161px 239px 312px 369px 402px 375px
                $lft= 245px 317px 371px 400px 399px 371px 316px 246px 80px
                
                for $v, $i in $top
                    &.lnk_{$i}
                        background-image url('../img/banner/ico_'+$i+'.png')
                        top $v
                        left $lft[$i]
        
        .text-gram
            height 100%
            position absolute
            width $wrapper - ( $paddingBox *2 )
            top 0
            left 0
            margin-left 121px
            z-index -1
            .tipographic
                position absolute
                bottom 75px
                right 0
                color #fff
                text-shadow 2px 3.464px 8px rgba(0, 0, 0, 0.33)
                text-align left
                font-size 48px
                line-height 1.2em
                display none
                
                &.cartografias
                    opacity 1
                    display block
                    animation showUp 750ms ease-in-out
                
                small
                    display inline-block
                    vertical-align top
                    position relative
                    top -3px
                span
                    display block
                    &.bg
                        font-size 62px
                    &.sm
                    small
                        font-size 48px
                    &.xmall
                        font-size 32px
    
        @media( max-width $sc-sm)
            width 100%
            margin-left 0
            img
                min-width 320px
                margin-left -110px !important
            
            .lnk-gram
                left auto
                right 0
                width 80%
                top 20px
                margin-right 0
                height auto
                background rgba(255,255,255,0.5)
                padding 20px
                max-width 250px
                a
                    position relative
                    left 0 !important
                    display: block
                    top 0 !important
                    min-height: 36px
                    width auto
                    text-decoration: none
                    height auto
                    background-size 36px auto
                    border none
                    line-height 24px
                    margin-bottom 5px
                    background-color rgba(255,255,255,0.75)
                    background-position 10px center
                    float none
                    transform: scale(1)
                    border-radius 0
                    padding 5px 0
                    &:hover .label
                        opacity .5
                        display inline-block
                        
                    .label
                        box-shadow none
                        background 0
                        text-align left
                        color #333
                        padding 0
                        top 0
                        padding-left: 10px
                        font-weight bold
                        position relative
                        display inline-block
                        vertical-align sub
                        line-height 1.2em
                        left 36px
                        width 80%
                        animation none !important
                        &:before
                            display none
            / .contenido
                padding 0 ($paddingBox *2)
                
                
