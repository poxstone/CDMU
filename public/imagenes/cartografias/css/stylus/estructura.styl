                box-shadow rgba(0,0,0,0.25) 2px 2px 8px 0
                top 2px
                //display none
                width 0
                padding 0
                opacity 0
                overflow auto
                overflow-x hidden
                max-height 100%
                a
                    float none
                    width 100%
                    margin-bottom 5px
