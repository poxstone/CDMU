        position relative
    .intercambiable
        transition ease-in-out all 500ms
        &.hide
            display none
            opacity 0
        &.show
            animation openRight ease-in-out .5s
            display block
            opacity 1
    .din-txt
        background #fff
        width auto
        height auto
        position absolute
        box-shadow rgba(#000,.25) -2px -32px 48px 0
        padding $paddingBox *2
        right 0
        top 0
        min-height 500px
        transition ease-in-out all 500ms
                
        p
            line-height 1.2em
            padding 0 0 10px 0
            margin auto
            text-align justify
    iframe
        width 100%
        height 350px
        border none
    .overflower
